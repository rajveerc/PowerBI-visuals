{
    "dataRoles": [
        {
            "displayName": "Legend",
            "name": "Category",
            "kind": "Grouping",
            "description": "The categorical field to show color"
        },
        {
            "displayName": "Primary measure",
            "name": "Y",
            "kind": "Measure",
            "description": "Primary measure",
            "requiredTypes": [
                {
                    "numeric": true
                }
            ]
        },
        {
            "displayName": "Secondary measure",
            "name": "SecondaryMeasure",
            "kind": "Measure",
            "description": "Secondary measure",
            "requiredTypes": [
                {
                    "numeric": true
                }
            ]
        },
        {
            "displayName": "Primary threshold",
            "name": "PrimaryKPI",
            "kind": "Measure",
            "description": "Primary threshold",
            "requiredTypes": [
                {
                    "numeric": true
                }
            ]
        },
        {
            "displayName": "Secondary threshold",
            "name": "SecondaryKPI",
            "kind": "Measure",
            "description": "Secondary threshold",
            "requiredTypes": [
                {
                    "numeric": true
                }
            ]
        },
        {
            "displayName": "Tooltips",
            "name": "Tooltip",
            "kind": "Measure",
            "description": "Tooltips"
        }
    ],
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "Category": {
                        "max": 1
                    },
                    "Y": {
                        "max": 1
                    },
                    "SecondaryMeasure": {
                        "max": 1
                    },
                    "PrimaryKPI": {
                        "max": 1
                    },
                    "SecondaryKPI": {
                        "max": 1
                    }
                }
            ],
            "categorical": {
                "categories": {
                    "select": [
                        {
                            "for": {
                                "in": "Category"
                            },
                            "dataReductionAlgorithm": {
                                "top": {
                                    "count": 30000
                                }
                            }
                        },
                        {
                            "for": {
                                "in": "Tooltip"
                            }
                        }
                    ]
                },
                "values": {
                    "select": [
                        {
                            "bind": {
                                "to": "Y"
                            }
                        },
                        {
                            "bind": {
                                "to": "SecondaryMeasure"
                            }
                        },
                        {
                            "bind": {
                                "to": "PrimaryKPI"
                            }
                        },
                        {
                            "bind": {
                                "to": "SecondaryKPI"
                            }
                        }
                    ]
                }
            }
        }
    ],
    "suppressDefaultTitle": true,
    "sorting": {
        "default": {}
    },
    "drilldown": {
        "roles": [
            "Category"
        ]
    },
    "objects": {
